<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit_code" model="ir.ui.view">
        <field name="name">product.template.form.inherit.code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="code" placeholder="Enter Code for Price Sync"/>
            </xpath>
        </field>
    </record>

     <record id="view_product_variant_form_inherit_code" model="ir.ui.view">
    <field name="name">product.product.form.inherit.code</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="after">
            <field name="code" placeholder="Enter Code for Price Sync"/>
        </xpath>
    </field>
</record>

</odoo>
