<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_invoice_inherit_form_view" model="ir.ui.view">
            <field name="name">account.invoice.inherit.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="after">
                <field name="order_line_image" widget="image"/>
            </xpath>
            </field>
        </record>
    </data>
</odoo>
