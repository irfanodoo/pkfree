<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_leave_rule_portal" model="ir.rule">
        <field name="name">Portal User: Own Time Off</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/> <!-- Ensure you are assigning the correct group -->
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>
    <record id="hr_leave_rule_admin" model="ir.rule">
        <field name="name">Admin: Full Access to Time Off</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field> <!-- Admin can access all records -->
    </record>

</odoo>
