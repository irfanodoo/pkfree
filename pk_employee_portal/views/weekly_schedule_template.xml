<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--         # employee weekly/schedule list view template                  -->

    <template id="weekly_schedule_list_view_temp_id" name="Weekly Schedule SOP">
        <t t-call="portal.portal_layout">
            <t t-if="checkouts" t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Weekly Shift</th>
                        <th>#</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="checkouts" t-as="doc">
                        <td>
                            <span t-field="user.name"/>
                        </td>
                        <td>
                            <span t-field="doc.number_of_days"/>
                        </td>
                        <td>
                            <!--                            <span t-field="doc.number_of_days"/>-->
                        </td>
                        <td>
                            <span t-field="doc.number_of_days"
                                  class="badge badge-pill badge-info"/>
                        </td>
                    </tr>
                </tbody>
            </t>
            <t t-else="">
                <div class="alert alert-warning" role="alert">
                    There are no Record Found.
                </div>
            </t>
        </t>
    </template>

    <!--                     employee weekly/schedule form view template            -->

    <template id="weekly_schedule_form_view_temp_id" name="Weekly Schedule Form View">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h3>Weekly Schedules</h3>
                <t t-if="checkouts">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Resource</th>
                                <th>Role</th>
                                <th>From Date Time</th>
                                <th>To Date Time</th>
                                <th>Allocated Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="checkouts" t-as="doc">
                                <td>
                                    <span t-field="doc.resource_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.role_id.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.start_datetime"/>

                                </td>
                                <td>
                                    <span t-field="doc.end_datetime"/>
                                </td>
                                <td>
                                    <span t-field="doc.allocated_hours"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>

                <t t-else="">
                    <div class="alert alert-warning" role="alert">
                        No Record found.
                    </div>
                </t>
            </div>
        </t>
    </template>


</odoo>