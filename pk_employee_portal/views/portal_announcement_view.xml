<odoo>
    <record id="view_announcement_form" model="ir.ui.view">
        <field name="name">announcement.form</field>
        <field name="model">portal.announcement</field>
        <field name="arch" type="xml">
            <form string="Announcement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="department_id" />
                        <field name="description"/>
                        <field name="post_date" readonly="1"/>
                        <field name="employee_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_announcement_tree" model="ir.ui.view">
        <field name="name">announcement.tree</field>
        <field name="model">portal.announcement</field>
        <field name="arch" type="xml">
            <tree string="Announcements">
                <field name="name"/>
                <field name="post_date"/>
                <field name="posted_by"/>
            </tree>
        </field>
    </record>

  <record id="action_announcements" model="ir.actions.act_window">
        <field name="name">Announcements</field>
        <field name="res_model">portal.announcement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_announcements_root"
              name="Announcements"
              parent="menu_sop_violation_root"
              action="action_announcements"/>


</odoo>
